                <th scope="col">CFU</th>
                <th scope="col">Docente</th>
                <th scope="col">A scelta</th>
                <th scope="col">Scheda di Trasparenza</th>                        
              </tr>
            </thead>
            <tbody>
              <% rows.forEach((row) => { %>
                <% if (row.anno != 2) return; %>
                <tr>
                  <td> <%= row.id_insegnamento %> </td>
                  <td> <%= row.ssd %> </td>
