<%- include('../navbar.ejs') %>

<div class="container text-center pt-3">
    <div class="shadow p-3 mb-5 bg-body rounded">
        <div class="card-body">
            <h2>Tirocini da convalidare</h2>
			<table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">ID CDS</th>
                    <th scope="col">Nome CDS</th>
                    <th scope="col">Matricola</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Convalida</th>                    
                </tr>
                </thead>
                <tbody>
                <% rows.forEach((row) => { %>
                    <tr>
                        <td name="<%= row.id_corso %>"> <%= row.id_corso %> </td>
                        <td> <%= row.nome_corso %> </td>
                        <td> <%= row.matricola %> </td>
                        <td> <%= row.nome_studente + ' ' + row.cognome_studente %> </td>
                        <td> <button class="btn btn-primary px-4" onclick="location.href='/admin/convalida_tirocini/<%= row.id_tirocinio%>/<%= row.matricola %>'">Vai</button> </td>
                    </tr>
                    
                <% }) %>
                </tbody>
                <tfoot>
                <tr class="table-dark"></tr>
                </tfoot>
            </table>


        </div>
    </div>
</div>
</body>

<%- include('../footer.ejs') %>
