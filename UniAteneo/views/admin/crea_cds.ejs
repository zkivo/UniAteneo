<script>
    <% if (typeof pallina !== 'undefined') { if (pallina.error !== 'undefined') { %> alert("<%= pallina.error %>") <% } } %>
    
    var i_righe = <% if (typeof pallina !== 'undefined') { %><%= pallina.tot_righe %><% } else { %>1<% } %>;

    var materie_attive = JSON.parse('<% if (typeof materie_attive !== 'undefined') {%><%-JSON.stringify(materie_attive).split("'").join("\\'")%><%}%>'); 

    function nome_onchange() {
      var testo = this.value.trimEnd().trimStart()
      var ssd = document.getElementById('ssd_' + this.id.split('_')[1])
      var scelta = document.getElementById('scelta_' + this.id.split('_')[1])
      switch(testo) {
        case 'Tesi':
        case 'Prova finale':
        case 'Tirocinio':
          ssd.disabled = true
          ssd.value = ""
          return
        default:
          if (scelta.value === "No") {
            ssd.disabled = false
          }
      }
      var index = materie_attive.map(e => {return e.nome}).indexOf(testo)
      if (index != -1) {
        ssd.value = materie_attive[index].ssd
        return
      }
      num = parseInt(testo)
      if (isNaN(num)) return
      index = materie_attive.map(e => {return e.id}).indexOf(num)
      if (index != -1) {
        ssd.value = materie_attive[index].ssd
        return
      }
    }

    function scelta_onchange() {
      var nome = document.getElementById('nome_' + this.id.split('_')[1])
      num = this.id.split('_')[1]
      switch(this.value) {
        case 'Primo blocco':
        case 'Secondo blocco':
        case 'Terzo blocco':
          document.getElementById('nome_' + num).placeholder = "Codice insegnamento"
          ssd = document.getElementById('ssd_' + num)
          ssd.disabled = true
          break
        default:
          document.getElementById('nome_' + num).placeholder = "Denominazione insegnamento"
          ssd = document.getElementById('ssd_' + num)
          switch(nome.value) {
            case 'Tesi':
            case 'Prova finale':
            case 'Tirocinio':
              ssd.disabled = true
              return
            default:
              ssd.disabled = false
          }
      }
    }
    
    function add_riga() {
      console.log("add row on click")
      tbody = document.getElementById('tbody')
      tbody.innerHTML += '<tr><td><input type="text" id="nome_' + i_righe.toString() + '" name="nome_' + i_righe.toString() + '" class="form-control" list="datalist_nomi"placeholder="Denominazione insegnamento" required> <datalist id="datalist_nomi"><% lista_materie_ssd.forEach(e=> { %> <option value="<%= e.nome %>"><% }) %></datalist></td><td> <input type="text" id="ssd_' + i_righe.toString() + '" name="ssd_' + i_righe.toString() + '" class="form-control" list="datalist_ssd"placeholder="S.S.D." required><datalist id="datalist_ssd"><% lista_materie_ssd.forEach(e=> { %> <option value="<%= e.ssd %>"><% }) %></datalist> </td><td><select class="form-select" aria-label="Default select example" id="scelta_' + i_righe.toString() + '" name="scelta_' + i_righe.toString() + '"required><option selected>No</option><option>Primo blocco</option><option>Secondo blocco</option><option>Terzo blocco</option></select></td><td><select class="form-select" aria-label="Default select example" id="anno_' + i_righe.toString() + '" name="anno_' + i_righe.toString() + '" required><option selected>1</option><option>2</option><option>3</option><option>4</option><option>5</option></select></td><td> <select class="form-select" aria-label="Default select example" id="cfu_' + i_righe.toString() + '" name="cfu_' + i_righe.toString() + '" required><option selected>3</option><option>6</option><option>9</option><option>12</option></select></td><td> <button class="btn btnDelete btn-secondary" id="delrow">-</button> </td></tr> ';
      document.getElementById('scelta_' + i_righe).onchange = scelta_onchange
      document.getElementById('nome_' + i_righe).onchange = nome_onchange
      document.getElementById('nome_' + i_righe).onkeyup = nome_onchange
      i_righe++;
      document.getElementById('tot_righe').value = i_righe.toString();
      document.getElementById('addrow').onclick = add_riga;
    }

    function del_riga() {
      console.log("del row on click")
      tbody = document.getElementById('tbody')
      tbody.removeChild(tbody.lastChild)
      document.getElementById('delrow').onclick = del_riga;
    }

    document.getElementById('addrow').onclick = add_riga;
    document.getElementById('delrow').onclick = del_riga;

    // assegna i callback ai tag
    for (i = 0; i < i_righe; i++) {
      console.log(i)
      document.getElementById('scelta_' + i).onchange = scelta_onchange;
      document.getElementById('nome_' + i).onchange = nome_onchange;
      document.getElementById('nome_' + i).onkeyup = nome_onchange;
    }

