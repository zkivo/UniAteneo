<%- include('../navbar.ejs') %>
<div class="container text-center">
    <h2 class="mt-3">Certificato Carriera</h2>
    <button class="btn btn-primary mt-1" onclick="stampa_certificato()">Stampa certificato</button>
    <div id="certificato">
        <div class="row mt-3">
            <div class="col-4">
                <h5>Matricola:</h5>
            </div>
            <div class="col-auto">
                <h5><%=utente.id%></h5>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-4">
                <h5>Codice Corso di studi:</h5>
            </div>
            <div class="col-auto">
                <h5><%=utente.corso%></h5>
            </div>
        </div>
        <table class="table table-hover mt-3">
            <thead>
            <tr>
                <th scope="col">Anno</th>
                <th scope="col">Codice e Denominazione Insegnamento</th>
                <th scope="col">CFU</th>
                <th scope="col">Esito</th>
                <th scope="col">Tipologia esame</th>
            </tr>
            </thead>
            <tbody>
                <% lista_materie.forEach(materia => {%>
                    <tr>
                        <td>
                            <%=materia.anno%>
                        </td>
                        <td>
                            <%=materia.nome%>
                        </td>
                        <td>
                            <%=materia.cfu%>
                        </td>
                        <td>
                            <%if (typeof materie_sostenute !== 'undefined') {%>
                                <% var index = materie_sostenute.map(mat => {return mat.id_insegnamento}).indexOf(materia.id)%>
                                <%if (index != -1) {%>
                                    <%=materie_sostenute[index].voto%> 
                                    <%if (materie_sostenute[index].lode == 1) {%>
                                        /L
                                    <%}%>
                            <%} }%>
                        </td>
                        <td>
                            <%if (typeof materie_sostenute !== 'undefined') {%>
                                <% var index = materie_sostenute.map(mat => {return mat.id_insegnamento}).indexOf(materia.id)%>
                                <%if (index != -1) {%>
                                    Sostenuto
                            <%} }%>           
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>
<script>
    function stampa_certificato() {
      var printwin = window.open("");
      printwin.document.write(document.getElementById("certificato").innerHTML);
      printwin.print(); 
    }  
  </script>
