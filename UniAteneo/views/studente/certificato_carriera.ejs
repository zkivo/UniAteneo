    <table class="table table-hover mt-3">
        <thead>
        <tr>
            <th scope="col">Anno</th>
            <th scope="col">Codice e Denominazione Insegnamento</th>
            <th scope="col">CFU</th>
            <th scope="col">Esito</th>
            <th scope="col">Tipologia esame</th>
        </tr>
        </thead>
        <tbody>
            <% lista_materie.forEach(materia => {%>
                <tr>
                    <td>
                        <%=materia.anno%>
                    </td>
                    <td>
                        <%=materia.nome%>
                    </td>
                    <td>
                        <%=materia.cfu%>
                    </td>
                    <td>
                        <%if (typeof materie_sostenute !== 'undefined') {%>
                            <% var index = materie_sostenute.map(mat => {return mat.id_insegnamento}).indexOf(materia.id)%>
                            <%if (index != -1) {%>
                                <%=materie_sostenute[index].voto%> 
                        <%} }%>
                    </td>
                    <td>
                        <%if (typeof materie_sostenute !== 'undefined') {%>
                            <% var index = materie_sostenute.map(mat => {return mat.id_insegnamento}).indexOf(materia.id)%>
                            <%if (index != -1) {%>
                                <%=materie_sostenute[index].sostenuto%> 
                        <%} }%>           
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
